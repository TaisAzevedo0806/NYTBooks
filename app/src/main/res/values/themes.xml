<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NYTimesBooks" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/MyDefaultTextView</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="MyTextViewTitles" parent="MyTextViewSubtitles">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextViewSubtitles">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyDefaultTextView">
        <item name="android:textColor">@color/card_view_dark</item>
    </style>

    <style name="MyTextViewRegular">
        <item name="android:textSize">14sp</item>
    </style>

</resources>